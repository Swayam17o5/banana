# Dockerfile for Banana Disease Detection API
# Cloud-safe for Render, Railway, Google Cloud Run

FROM python:3.10-slim

WORKDIR /app

# System deps
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Python deps
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# App source
COPY app.py .
COPY inference.py .
COPY model.py .

# Directory for downloaded model
RUN mkdir -p /app/models

# Expose DEFAULT port (Render overrides with $PORT)
EXPOSE 8000

# Start FastAPI correctly with ASGI worker
CMD ["sh", "-c", "gunicorn app:app -k uvicorn.workers.UvicornWorker --bind 0.0.0.0:${PORT:-8000}"]
